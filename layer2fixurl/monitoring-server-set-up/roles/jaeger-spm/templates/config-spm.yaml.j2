extensions:
  jaeger_storage:
    backends:
      memory_storage:
        memory:
          max_traces: {{ jaeger_memory_max_traces }}
    metric_backends:
      prometheus_storage:
        prometheus:
          endpoint: {{ prometheus_endpoint }}
          normalize_calls: true
          normalize_duration: true

  jaeger_query:
    storage:
      traces: memory_storage
      metrics: prometheus_storage
    ui:
      config_file: /etc/jaeger/ui-config.json

receivers:
  otlp:
    protocols:
      grpc:
        endpoint: 0.0.0.0:4317
      http:
        endpoint: 0.0.0.0:4318

  jaeger:
    protocols:
      grpc:
        endpoint: 0.0.0.0:14250
      thrift_http:
        endpoint: 0.0.0.0:14268
      thrift_compact:
        endpoint: 0.0.0.0:6831
      thrift_binary:
        endpoint: 0.0.0.0:6832

exporters:
  jaeger_storage_exporter:
    trace_storage: memory_storage

  prometheus:
    endpoint: "0.0.0.0:8889"

connectors:
  spanmetrics:
    namespace: traces_spanmetrics
    histogram:
      explicit:
        buckets: {{ spanmetrics_histogram_buckets | to_json }}
    dimensions:
      - name: http.method
      - name: http.status_code
    metrics_flush_interval: 15s

processors:
  batch:

service:
  extensions: [jaeger_storage, jaeger_query]
  pipelines:
    traces:
      receivers: [otlp, jaeger]
      processors: [batch]
      exporters: [jaeger_storage_exporter, spanmetrics]
    metrics/spanmetrics:
      receivers: [spanmetrics]
      exporters: [prometheus]

  telemetry:
    logs:
      level: {{ jaeger_log_level }}