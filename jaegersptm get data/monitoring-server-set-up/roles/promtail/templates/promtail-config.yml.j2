server:
  http_listen_port: {{ promtail_port }}
  grpc_listen_port: 0

positions:
  filename: /var/lib/promtail/positions.yaml

clients:
  - url: http://localhost:{{ loki_port }}/loki/api/v1/push

scrape_configs:
  - job_name: systemd-journal
    journal:
      max_age: 12h
      labels:
        job: systemd-journal

    relabel_configs:
      - source_labels: ['__journal__systemd_unit']
        target_label: 'unit'

      - source_labels: ['__journal__hostname']
        target_label: 'host'
  - job_name: system
    static_configs:
      - targets:
          - localhost
        labels:
          job: varlogs
          __path__: /var/log/*.log

  # Syslog
  - job_name: syslog
    static_configs:
      - targets:
          - localhost
        labels:
          job: syslog
          __path__: /var/log/syslog

  # Auth logs (login attempts, sudo, etc.)
  - job_name: auth
    static_configs:
      - targets:
          - localhost
        labels:
          job: auth
          __path__: /var/log/auth.log

  # Kernel logs
  - job_name: kern
    static_configs:
      - targets:
          - localhost
        labels:
          job: kern
          __path__: /var/log/kern.log

  # Apache/Nginx logs (if installed)
  - job_name: apache
    static_configs:
      - targets:
          - localhost
        labels:
          job: apache
          log_type: access
          __path__: /var/log/apache2/*access.log

  - job_name: apache-error
    static_configs:
      - targets:
          - localhost
        labels:
          job: apache
          log_type: error
          __path__: /var/log/apache2/*error.log

  - job_name: nginx
    static_configs:
      - targets:
          - localhost
        labels:
          job: nginx
          log_type: access
          __path__: /var/log/nginx/*access.log

  - job_name: nginx-error
    static_configs:
      - targets:
          - localhost
        labels:
          job: nginx
          log_type: error
          __path__: /var/log/nginx/*error.log

  # Docker logs (if using Docker)
  - job_name: docker
    static_configs:
      - targets:
          - localhost
        labels:
          job: docker
          __path__: /var/lib/docker/containers/*/*.log
    pipeline_stages:
      - json:
          expressions:
            output: log
            stream: stream
            attrs:
      - labels:
          stream:

  # Application logs in common directories
  - job_name: app-logs
    static_configs:
      - targets:
          - localhost
        labels:
          job: applications
          __path__: /var/log/*/**.log

  # Custom application logs (adjust path as needed)
  - job_name: custom-apps
    static_configs:
      - targets:
          - localhost
        labels:
          job: custom-apps
          __path__: /opt/*/logs/*.log

