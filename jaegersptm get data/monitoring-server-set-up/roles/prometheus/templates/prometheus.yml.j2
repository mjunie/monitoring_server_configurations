global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:{{ prometheus_port }}']

  - job_name: 'node_exporter'
    static_configs:
      - targets: ['localhost:{{ node_exporter_port }}']

  - job_name: 'jaeger'
    static_configs:
      - targets: ['localhost:8888']  # Replace <jaeger_host> with your server IP or localhost
    metrics_path: /metrics
  - job_name: 'jaeger-spm'
    static_configs:
      - targets: ['127.0.0.1:8889']